<div>
    <h1>Pending:</h1>
    <% @invitations.each do |invite| %>
        <% if invite.accepted == nil %>
            <%= invite.event %>
            <%= invite.event.creator.email %>
            <%= link_to 'Reject', reject_invitation_path(invite.id) %>
            <button>Reject</button>
        <% end %>
    <% end %>
</div>

<div>
    <h1>Accepted:</h1>
    <% @invitations.each do |invite| %>
        <% if invite.accepted == true %>
            <%= invite.event %>
            <%= invite.event.creator.email %>
            <button>Accept</button>
            <button>Reject</button>
        <% end %>
    <% end %>
</div>
<div>
    <h1>Rejected:</h1>
    <% @invitations.each do |invite| %>
        <% if invite.accepted == false %>
            <%= invite.event %>
            <%= invite.event.creator.email %>
            <button>Accept</button>
            <button>Reject</button>
        <% end %>
    <% end %>
</div>