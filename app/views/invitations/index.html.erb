
<div class="wrapper">

<div class="profile-nav">
    <div class="profile-nav-item">Pending:</div>
    <div class="profile-nav-item">Accepted</div>
    <div class="profile-nav-item">Rejected</div>
</div>

    <div class="events">
            
        <div>
            <h1>Pending:</h1>
        </div>
        <% @invitations.each do |invite| %>
            <% if invite.accepted == nil %>
            <div class="card">
            <div class="evnt-img">
                    <%= image_tag(event.event_image, style:'width:100%') %>
            </div>
            <div class="container">
                    <h2><%= invite.event.name %></h2>
                    <h3>Date: <%= invite.event.event_date %></h3>
                    <%= link_to 'See event', event_path(invite.event), class: "evnt-info" %>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>


    <div class="events">
        <div>
            <h1>Accepted:</h1>
        </div>

        <% @invitations.each do |invite| %>
            <% if invite.accepted == true %>
            <div class="card">
            <div class="evnt-img">
                    <%= image_tag(event.event_image, style:'width:100%') %>
            </div> 
            <div class="container">
                    <h2><%= invite.event.name %></h2>
                    <h3>Date: <%= invite.event.event_date %></h3>
                    <%= link_to 'See event', event_path(invite.event), class: "evnt-info" %>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>

    <div class="events">
        <div>
            <h1>Rejected:</h1>
        </div>
        <% @invitations.each do |invite| %>
            <% if invite.accepted == false %>
            <div class="card">
            <div class="evnt-img">
                    <%= image_tag(event.event_image, style:'width:100%') %>
            </div>                 
                <div class="container">
                    <h2><%= invite.event.name %></h2>
                    <h3>Date: <%= invite.event.event_date %></h3>
                    <%= link_to 'See event', event_path(invite.event), class: "evnt-info" %>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>

</div>