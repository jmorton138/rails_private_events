
<div class="wrapper">
    <h1>Upcoming Events</h1>

    <div class="events future-events">
            <% @future_events.each do |event| %>
                <div class="card">
                    <img class="event-image" src="" alt="">
                    <div class="container">
                        <h2><%= event.name %></h2>
                        <h3>Date: <%= event.event_date %></h3>
                        <%= link_to 'See event', event_path(event) %>
                    </div>
                </div>
            <% end %>
    </div>
    <h1>Past Events</h1>

    <div class="events past-events">
        <% @past_events.each do |event| %>
            <div class="card">
                <img class="event-image" src="https://images.pexels.com/photos/10002692/pexels-photo-10002692.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
                <div class="container">
                    <h2><%= event.name %></h2>
                    <h3>Date: <%= event.event_date %></h3>
                    <%= link_to 'See event', event_path(event) %>
                </div>
            </div>
        <% end %>
    </div>


</div>
