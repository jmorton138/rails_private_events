<div class="wrapper form">
    <%= form_with model: @event do |f| %>
        <h1>Create a new event</h1>

        <%= f.text_field :name, required: true %>
        <%= f.date_field :event_date, required: true %>
        <%= f.text_field :details, required: true %>
        <%= f.file_field :event_image, required: true %>
        
        <div class="check-contain">
            <%= f.check_box :private, class: "check" %>
            <label for="event[private]">Make event private</label>
        </div>

        <%= f.submit 'Submit' %>
    <% end %>
</div>

