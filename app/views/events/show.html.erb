
<div>
    <div>
        Name: <%= @event.name %>
    </div>

    <div>
        Date:<%= @event.event_date %>
    </div>

    <div>
        Creator: <%= @event.creator.first_name %> <%= @event.creator.last_name %>
    </div>


    <% if @event.creator == current_user %>
        <%= link_to 'Send invitations', new_event_invitation_path(@event.id) %>
        <%= link_to 'Edit Event', edit_event_path %>
        <%= link_to 'Cancel Event', event_path, method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
</div>

<% if @event.event_attendees.length > 0 %>
    <div>
        Attendees:
        <%  @event.event_attendees.each do |a| %>
        <ul>
            <li><%= a.first_name %> <%= a.last_name %></li>
        
        </ul>
        <% end %>
    </div>
<% end %>

<% if @event.private == nil || @event.private == false %>
    <% if @event.event_attendees.include?(current_user) %>
        <%= link_to 'Cancel attendance', cancel_attend_event_path %>
    <% else %>
        <%= link_to 'Attend', attend_event_path %>
    <% end %>
<% elsif @event.private == true && @event.invitations.where(invitee_id: current_user.id) %>
    <% if @invitation.accepted == true %>
        <%= link_to 'Reject', reject_invitation_path(@invitation.id) %>
    <% elsif @invitation.accepted == false %>
        <%= link_to 'Accept', accept_invitation_path(@invitation.id) %>
    <% elsif @invitation.accepted == nil %>
        <%= link_to 'Reject', reject_invitation_path(@invitation.id) %>
        <%= link_to 'Accept', accept_invitation_path(@invitation.id) %>
    <% end %>
<% end %>
